%% yaws ip
{bind_ip, {<%= node[:ucengine][:config][:bind_ip] %>}}.
%% yaws port
{port, <%= node[:ucengine][:config][:bind_port] %>}.
%% log dir, used only for yaws
{log_dir, "<%= node[:ucengine][:config][:log_dir] %>"}.
%% values: debug, info, warning, error, critical
{log_level, <%= node[:ucengine][:config][:log_level] %>}.
%% pidfile
{pidfile, "log/ucengine.pid"}.
%% yaws cache
{cache_refresh, 0}.
%% Connection timeout for live api
{connection_timeout, 60}.
%% Session timeout
{presence_timeout, 150}.
{timeout_refresh, 1}.
%% yaws root dir
{wwwroot, "wwwroot/"}.
%% admin setup
{admin, [{uid, "root"}, {auth, "password"}, {credential, "root"}]}.
%% Restricted access for creating users
{register, open}.
